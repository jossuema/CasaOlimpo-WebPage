---
interface Props {
    author:{
        nombre: string;
        descripcion: string;
        puesto: string;
        foto: string;
        foto_fondo: string;
        email: 	string;
        github: string;
        facebook: string;
        instagram: string;
    }
    
}

const { nombre, descripcion, puesto, foto, foto_fondo, email, github, facebook, instagram } = Astro.props.author;

const URL = "../../public/images/staff/";
---


<div class="flex flex-wrap items-center justify-center">
    <div class="container max-w-lg shadow-lg transform duration-200 easy-in-out m-12 blurext mt-[50px] bg-[white]/40 relative z-10 p-[20px] backdrop-blur-[20px">
      <div class="h-2/4 sm:h-64 overflow-hidden">
        <img class="w-full rounded-t"
            src=`${URL}${foto_fondo}`
          alt="Photo by aldi sigun on Unsplash" />
      </div>
      <div class="flex justify-start px-5 -mt-12 mb-5">
        <span class="block relative h-32 w-32">
          <img alt="Photo by aldi sigun on Unsplash"
            src=`${URL}${foto}`	
            class="mx-auto object-cover rounded-full h-24 w-24 bg-white p-1" />
        </span>
      </div>
      <div class="">
        <div class="px-7 mb-8">
          <h2 class="text-3xl font-bold text-green-800 dark:text-gray-800">{nombre}</h2>
          <p class="text-gray-400 mt-2 dark:text-gray-700">{puesto}</p>
          <p class="mt-2 text-gray-600 dark:text-gray-950">
            {descripcion}
          </p>
          <div
            class="justify-center px-4 py-2 cursor-pointer bg-green-900 max-w-min mx-auto mt-8 rounded-lg text-gray-300 hover:bg-green-800 hover:text-gray-100 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-gray-200">
            <a href={`mailto:${email}`}>{email}</a>
          </div>
          <div class="flex flex-wrap justify-center gap-2 sm:gap-4 mt-8">
